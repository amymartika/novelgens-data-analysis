--Creature superlatives
--Which creature has been voted the most memorable?
SELECT 
    creature.name,
    COUNT(creature.id) AS total_votes
FROM novel_gens_db.content_feedback_forms AS feedback
INNER JOIN novel_gens_db.creatures AS creature
ON feedback.content_id = creature.id
WHERE is_memorable = "TRUE"
GROUP BY creature.id
ORDER BY total_votes DESC
LIMIT 4;

--Which creature has been voted the scariest?
SELECT 
    creature.name,
    COUNT(creature.id) AS total_votes
FROM novel_gens_db.content_feedback_forms AS feedback
INNER JOIN novel_gens_db.creatures AS creature
ON feedback.content_id = creature.id
WHERE is_scary = "TRUE"
GROUP BY creature.id
ORDER BY total_votes DESC
LIMIT 3;

